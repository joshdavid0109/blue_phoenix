<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/bp_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="51dp"
            android:layout_height="51dp"
            app:srcCompat="@drawable/bp_logo"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutEmail"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/bp_bg"
                    app:boxStrokeColor="@color/bp_bg"
                    app:hintTextColor="@color/bp_bg"
                    app:startIconContentDescription="Email Icon"
                    app:startIconDrawable="@drawable/ic_book"
                    app:startIconTint="@color/bp_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical"
                   >

                    <TextView
                        android:id="@+id/user_display_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_extrabold"
                        android:maxLines="1"
                        android:text="@string/reviewer_main_title"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button_round_corners"
            android:textColor="@color/bp_bg"
            android:fontFamily="@font/poppins_bold"
            android:textSize="11sp"
            android:text="@string/continue_previous_session"
            android:layout_gravity="center_horizontal"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/i_codals"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/codal_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="40dp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:text="@string/reviewer_title_remedial_law"
                        android:textColor="@color/bp_bg"
                        android:textSize="18sp" />

                    <!--                    <Spinner-->
                    <!--                        android:id="@+id/codals_more"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        />-->
                </LinearLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <Button
                                android:id="@+id/reviewer_button1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:text="GENERAL PRINCIPLES" />

                            <Button
                                android:id="@+id/reviewer_button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:text="JURISDICTION" />

                            <Button
                                android:id="@+id/reviewer_button3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:text="CIVIL PROCEDURE" />
                            <Button
                                android:id="@+id/reviewer_button4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:text="CRIMINAL PROCEDURE" />

                            <Button
                                android:id="@+id/reviewer_button5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="EVIDENCE"
                                android:textColor="@color/white" />
                            <Button
                                android:id="@+id/reviewer_button6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="SPECIAL PROCEEDINGS"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <!-- Footer Section with fixes for small screens -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/home_web_link"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:id="@+id/web_icon"
                                        android:layout_width="22dp"
                                        android:layout_height="20dp"
                                        android:tint="@color/bp_name_light_blue"
                                        app:drawableStartCompat="@drawable/ic_web" />

                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:textSize="13sp"
                                        android:text="@string/www_bluephoenix_com"
                                        android:textColor="@color/bp_bg"
                                        android:layout_gravity="center" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/home_fb_link"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="10dp"> <!-- spacing between sections -->

                                    <TextView
                                        android:id="@+id/fb_icon"
                                        android:layout_width="22dp"
                                        android:layout_height="20dp"
                                        android:layout_marginStart="2dp"
                                        android:tint="@color/bp_name_light_blue"
                                        app:drawableStartCompat="@drawable/ic_fb" />

                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:textSize="13sp"
                                        android:textColor="@color/bp_bg"
                                        android:text="@string/blue_phoenix_illustrated_reviewers"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>