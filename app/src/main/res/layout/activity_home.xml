<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/bp_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="51dp"
            android:layout_height="51dp"
            app:srcCompat="@drawable/bp_logo"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_display_name"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_extrabold"
                        android:gravity="center_vertical"
                        android:text="@string/display_name"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/main_greeting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/hope_you_are_doing_well"
                        android:textColor="@color/bp_name_light_blue"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button_round_corners"
            android:textColor="@color/bp_bg"
            android:fontFamily="@font/poppins_bold"
            android:textSize="11sp"
            android:text="@string/continue_previous_session"
            android:layout_gravity="center_horizontal"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/i_codals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutEmail"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="30dp"
                        android:hint="@string/email_username_field"
                        android:textColorHint="@color/bp_bg"
                        app:boxStrokeColor="@color/bp_bg"
                        app:hintTextColor="@color/bp_bg"
                        app:startIconContentDescription="Email Icon"
                        app:startIconDrawable="@drawable/ic_book"
                        app:startIconTint="@color/bp_bg">

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="@string/illustrated_codals"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="18sp"
                        android:textColor="@color/bp_bg"
                        android:gravity="center"/>

                    <Spinner
                        android:id="@+id/codals_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <!-- Responsive Placeholder Image Inside a ConstraintLayout for better control -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Responsive ImageView with percentage-based sizing -->
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/announcement_board_border"
                        android:scaleType="centerInside"
                        app:layout_constraintWidth_percent="0.85"
                        app:layout_constraintDimensionRatio="H,350:180"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/bp_logo" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <EditText
                    android:id="@+id/search_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Search"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:drawableStart="@drawable/ic_magnify"
                    android:drawablePadding="8dp"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="HardcodedText" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="5dp"
                    app:columnCount="3"
                    app:rowCount="2"
                    app:useDefaultMargins="true">

                    <!-- Box 1: Row 0, Column 0 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/box1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/bp_bg"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/bp_name_light_blue"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="25sp"
                            android:text="REM" />

                    </androidx.cardview.widget.CardView>

                    <!-- Box 2: Row 0, Column 1 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/box2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/bp_bg"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/bp_name_light_blue"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="25sp"
                            android:text="CONSTI" />
                    </androidx.cardview.widget.CardView>

                    <!-- Box 3: Row 0, Column 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/box3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/bp_bg"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/bp_name_light_blue"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="25sp"
                            android:text="CRIM" />
                    </androidx.cardview.widget.CardView>

                    <!-- Box 4: Row 1, Column 0 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/box4"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/bp_bg"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/bp_name_light_blue"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="25sp"
                            android:text="CIV" />
                    </androidx.cardview.widget.CardView>

                    <!-- Box 5: Row 1, Column 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/box5"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/bp_bg"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" android:textColor="@color/bp_name_light_blue"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="25sp"
                            android:text="COMM" />
                    </androidx.cardview.widget.CardView>

                    <!-- Box 6: Row 1, Column 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/box6"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/bp_bg"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/bp_name_light_blue"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="25sp"
                            android:text="TAX" />
                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>