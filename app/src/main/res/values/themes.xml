<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BluePhoenix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bp_name_light_blue</item>
        <item name="colorPrimaryVariant">@color/bp_name_light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bp_name_light_blue</item>
        <item name="colorSecondaryVariant">@color/bp_name_light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bp_name_light_blue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NavigationViewTextStyle">
        <item name="android:fontFamily">@font/poppins_light</item> <item name="android:textSize">16sp</item> <item name="android:textColor">@color/bp_bg</item>
    </style>
    <style name="NavigationViewTextTitleStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item> <item name="android:textSize">16sp</item> <item name="android:textColor">@color/gray</item>
    </style>
</resources>